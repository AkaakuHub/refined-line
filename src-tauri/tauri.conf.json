{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "refined-line",
  "version": "../package.json",
  "identifier": "net.akaaku.refined-line",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "create": false,
        "url": "index.html",
        "decorations": false,
        "dragDropEnabled": false,
        "width": 1280,
        "height": 800,
        "title": "refined-line"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/AkaakuHub/refined-line/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDNDNDNjcwRUVCQzlCQTUKUldTbG03enVjTVpETENlTUxTcVJScmg3YldGRVZDNi9ibmdkNWFYbUxrZGZKMkZETjJGcG1MVC8K"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    },
    "resources": [
      "config.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  }
}
